text:p text:style-name="Heading"
  =(attr :doctitle)

- if attr?(:logiciel_version)
  text:p text:style-name="Normal"
    text:span text:style-name="gras"
      ="Outil utilisé : "
    =(attr :logiciel_version)

text:p text:style-name="Signature"
  =(attr :author)
- if attr?(:fonction)
  text:p text:style-name="Signature"
    =(attr :fonction)

- if attr?(:chapeau)
  text:p text:style-name="chapeau"
    =(attr :chapeau)
- else
  =content

- if attr?(:keywords)
  text:p text:style-name="pragma"
    ="/// Mots-clés ///"
  text:p text:style-name="Normal"
    =(attr :keywords)
  text:p text:style-name="pragma"
    ="/// Fin Mots-clés ///"
  text:p text:style-name="Normal"

- if attr?(:logos)
  - logos = (attr :logos).split(',')
  - logos.each do |logo|
    text:p text:style-name="pragma"
      ="/// Logo: #{logo} ///"
  text:p text:style-name="Normal"

- if attr?(:short)
  text:p text:style-name="pragma"
    ="/// Résumé ///"
  text:p text:style-name="Normal"
   =(attr :short)
  text:p text:style-name="pragma"
    ="/// Fin Résumé ///"

-if attr?(:chapeau)
  =content
